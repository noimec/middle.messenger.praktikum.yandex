<main class="main flex">
    <div class="flex back__wrapper">
        {{> back-icon}}
    </div>

    <section class="profile flex">
        <button id="avatar" class="reset-btn profile__avatar avatar">
            <img src="#" alt="Avatar">
        </button>
        <h1 class="profile__name">Иван</h1>
        
        <form class="profile__form flex" action="#">
            <ul class="reset-list profile__list flex">
            <li class="profile__item">
                {{> user-details label="Почта" name="email" value="pochta@yandex.ru"}}
            </li>
            <li class="profile__item">
                {{> user-details label="Логин" name="login" value="ivanivanov"}}
            </li>
            <li class="profile__item">
                {{> user-details label="Имя" name="first_name" value="Иван"}}
            </li>
            <li class="profile__item">
                {{> user-details label="Фамилия" name="second_name" value="Иванов"}}
            </li>
            <li class="profile__item">
                {{> user-details label="Имя в чате" name="display_name" value="Иван"}}
            </li>
            <li class="profile__item">
                {{> user-details label="Телефон" name="phone" value="+79999999999"}}
            </li>
        </ul>

        <ul class="reset-list profile__list flex">
            <li class="profile__item">
                <button class="profile__item_blue reset-btn">Изменить данные</button>
            </li>
            <li class="profile__item">
                <button class="profile__item_blue reset-btn">Изменить пароль</button>
            </li>
            <li class="profile__item">
                <button class="profile__item_red reset-btn">Выйти</button>
            </li>
        </ul>

        <ul class="reset-list profile__list flex">
            <li class="profile__item">
                {{> user-details label="Старый пароль" name="oldPassword" value="******"}}
            </li>
            <li class="profile__item">
                {{> user-details label="Новый пароль" name="newPassword" value="******"}}
            </li>
            <li class="profile__item">
                {{> user-details label="Повторите новый пароль" name="newPassword" value="******"}}
            </li>
        </ul>

        <button class="reset-btn action-button profile__save-btn">Сохранить</button>
        </form>
    </section>
</main>
