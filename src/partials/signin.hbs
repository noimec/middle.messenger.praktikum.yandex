<main class="flex main">
    <form action="#" class="form flex">

        <h1 class="form__title">Регистрация</h1>

        <ul class="flex form__list">
            <li class="form__item flex">{{> input label="Почта" name="email"}}</li>
            <li class="form__item flex">{{> input label="Логин" name="login"}}</li>
            <li class="form__item flex">{{> input label="Имя" name="first_name"}}</li>
            <li class="form__item flex">{{> input label="Фамилия" name="second_name"}}</li>
            <li class="form__item flex">{{> input label="Телефон" name="phone"}}</li>
            <li class="form__item flex">{{> input label="Пароль" name="password"}}</li>
